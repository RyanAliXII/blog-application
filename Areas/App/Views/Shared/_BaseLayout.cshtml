</head>

<body>

    <div>
        <main role="main">

            @RenderBody()
        </main>
    </div>
    <script src="https://kit.fontawesome.com/e3d540c71b.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.js"></script>
